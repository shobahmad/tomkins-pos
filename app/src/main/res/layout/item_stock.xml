<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textDoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="12.5sp"
            android:padding="4dp"
            android:text="@{stock.doId, default=`QIJE127361D`}"
            android:textColor="@color/greyishBrown"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/viewStatus"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewStatus"
            android:layout_width="5dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/textDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/textDoId"
            android:visibility="invisible"
            />


        <TextView
            android:id="@+id/textName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@{stock.name, default=`Tomkins New Air`}"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/viewStatus"
            app:layout_constraintTop_toBottomOf="@+id/textDoId" />

        <TextView
            android:id="@+id/textLabelStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingLeft="4dp"
            android:text="@string/stock_available"
            android:textColor="@color/greyLines"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textStok"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textSize"
            android:layout_marginRight="4dp" />


        <TextView
            android:id="@+id/textStok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@{String.valueOf(stock.qty), default=`188`}"
            android:textAlignment="gravity"
            android:textColor="@color/greenblue"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@id/textDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/textStok"
            app:layout_constraintStart_toStartOf="@+id/textName"
            app:layout_constraintTop_toBottomOf="@+id/textName"
            android:fontFamily="sans-serif-medium"
            android:text="@{stock.description, default=`Short descruiption here`}"
            android:textColor="@color/warmGrey"
            android:textSize="14sp"
            android:textStyle="normal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            />

        <TextView
            android:id="@+id/textSize"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="start|center_vertical"
            android:paddingLeft="4dp"
            android:text="@{stock.size, default=`41`}"
            android:textAlignment="gravity"
            android:textColor="@color/greyishBrown"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/textName"
            app:layout_constraintEnd_toStartOf="@+id/textStok"
            app:layout_constraintStart_toEndOf="@+id/viewDivider"
            app:layout_constraintTop_toTopOf="@id/textName" />

        <View
            android:id="@+id/viewDivider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/greyLines"
            app:layout_constraintBottom_toBottomOf="@id/textName"
            app:layout_constraintStart_toEndOf="@+id/textName"
            app:layout_constraintTop_toTopOf="@+id/textName"
            />

        <View
            android:id="@+id/viewDividerBottom"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textDescription"
            android:background="@color/greyLines"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>
        <import type="android.view.View"/>
        <variable
            name="stock"
            type="com.erebor.tomkins.pos.data.ui.StockUiModel" />
    </data>
</layout>