<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/paleGrey"
        >

    <include
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/snippet_toolbar"
        app:title="@{title}"
        />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="6dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardGoods"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <include
                        layout="@layout/snippet_sync_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:download="@{downloadGoods}" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDiscount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="8dp"
                    
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardGoods">

                    <include
                        layout="@layout/snippet_sync_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:download="@{downloadDiscount}" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="8dp"
                    
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardDiscount">

                    <include
                        layout="@layout/snippet_sync_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:download="@{downloadPrice}" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardGender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="8dp"
                    
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardPrice">

                    <include
                        layout="@layout/snippet_sync_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:download="@{downloadGender}" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDelivery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="8dp"
                    
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardGender">

                    <include
                        layout="@layout/snippet_sync_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:download="@{downloadDelivery}" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardOpname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="8dp"
                    
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardDelivery">

                    <include
                        layout="@layout/snippet_sync_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:download="@{downloadOpname}" />
                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <data>
        <variable
            name="title"
            type="String" />
        <variable
            name="downloadGoods"
            type="com.erebor.tomkins.pos.data.ui.DownloadUiModel" />
        <variable
            name="downloadDiscount"
            type="com.erebor.tomkins.pos.data.ui.DownloadUiModel" />
        <variable
            name="downloadPrice"
            type="com.erebor.tomkins.pos.data.ui.DownloadUiModel" />
        <variable
            name="downloadGender"
            type="com.erebor.tomkins.pos.data.ui.DownloadUiModel" />
        <variable
            name="downloadDelivery"
            type="com.erebor.tomkins.pos.data.ui.DownloadUiModel" />
        <variable
            name="downloadOpname"
            type="com.erebor.tomkins.pos.data.ui.DownloadUiModel" />
    </data>

</layout>